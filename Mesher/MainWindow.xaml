<Window x:Class="Mesher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:graphicscore="clr-namespace:Mesher.GraphicsCore;assembly=Mesher.GraphicsCore"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel SizeChanged="DockPanel_SizeChanged">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Import mesh..."/>
                <Separator/>
                <MenuItem Header="Save mesh as..."/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">

            </MenuItem>
            <MenuItem Header="Render">
                <MenuItem Header="Camera">
                    <MenuItem Header="Orthographics" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="Perspective" Click="MenuItem_Click_1"></MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>
        <graphicscore:RenderContext Name="RenderContext"/>
    </DockPanel>
</Window>
